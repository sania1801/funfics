
<table class="table">
  <thead>
  <tr>
    <th scope="col">Number</th>
    <th scope="col">Title</th>
    <th scope="col">Edit</th>
    <th scope="col">Destroy</th>
    <th scope="col">Genre</th>
  </tr>
  </thead>

  <tbody>
  <tr><% @user_posts.each do |post| %>
      <th scope="row"></th>
      <td><%=link_to post.title.html_safe, post_path(post) %></td>
      <td><span class = "btn btn-warning" ><%=link_to 'Edit', edit_post_path(post) %></span></td>
      <td><span class="btn btn-danger"><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm:'Are you sure?'}%></span></td>
      <td><%= post.genre.name %></td>
      </tr>
    <% end %>
    </tbody>
</table>